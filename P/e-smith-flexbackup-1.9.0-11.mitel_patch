+++ e-smith-flexbackup/root/etc/e-smith/templates/etc/flexbackup.conf/10prune_tree	Thu Oct 20 17:29:13 2005
@@ -0,0 +1,10 @@
+{
+    my @prunelist = split(',', $flexbackup{Prune} || '');
